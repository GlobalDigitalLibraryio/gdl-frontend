{
  "name": "gdl",
  "private": true,
  "bolt": {
    "workspaces": [
      "packages/*"
    ]
  },
  "author": "gdl@knowit.no",
  "repository": "https://github.com/GlobalDigitalLibraryio/gdl-frontend.git",
  "license": "GPL-3.0",
  "scripts": {
    "build": "run-p build:frontend build:admin",
    "build:frontend": "cd packages/gdl-frontend && yarn build",
    "build:admin": "cd packages/admin-frontend && yarn build",
    "delete": "yarn run delete:modules",
    "delete:modules": "find . -type d -name node_modules -maxdepth 3 -exec rm -rf '{}' +",
    "proxy": "micro-proxy -r rules-dev-proxy.json -p 3000",
    "ci": "yarn run format:check && yarn run lint && yarn test && yarn run typecheck && yarn build && yarn && yarn cypress:test --port 3000",
    "ci:remote": "yarn run format:check && yarn run lint && yarn test && yarn run typecheck && yarn build && yarn && yarn cypress:boot && yarn cypress:test",
    "typecheck": "flow check",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --list-different \"**/*.js\"",
    "lint": "eslint . --ext .js --max-warnings=0 --ignore-path .prettierignore",
    "start": "cd packages/gdl-frontend && yarn start",
    "cypress:verify": "./node_modules/.bin/cypress verify",
    "cypress:open": "cypress open",
    "cypress:boot": "cd packages/gdl-frontend && yarn start & wait-on http://localhost:3005",
    "cypress:test": "./node_modules/.bin/cypress run",
    "cypress:test:record": "./node_modules/.bin/cypress run --record"
  },
  "devDependencies": {
    "@babel/core": "7.1.6",
    "@babel/preset-flow": "7.0.0",
    "@lingui/babel-preset-react": "2.7.1",
